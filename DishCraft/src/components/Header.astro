<style>
header {
    width: 100%;
    background-color: #f8f9fa;
    padding: 10px 20px;
}

nav {
    display: flex;
    align-items: center;
    justify-content: space-between; /* Distribute items properly */
    max-width: 1200px; /* Prevents it from stretching too much */
    margin: 0 auto; /* Centers the navigation */
    flex-wrap: wrap; /* Allows wrapping on smaller screens */
}

nav img {
    max-width: 100%; /* Ensure the logo scales down on smaller screens */
    height: auto; /* Maintain aspect ratio */
}

.internal-links {
    display: flex;
    gap: 20px; /* Increase gap between links */
}

.internal-links a {
    font-size: 30px; 
    font-weight: bold;
    color: black;
    transition: color 0.2s ease-in-out;
}

.internal-links a:hover {
    color: rgb(255, 115, 0); /* Color on hover */
}

.social-links {
    display: flex;
    gap: 10px;
}

.page-link {
    color: black;
    font-size: 18px;
    text-decoration: none;
    transition: color 0.2s ease-in-out;
}

.page-link:hover,
.page-link:focus,
.page-link:active {
    color: #007bff; /* Change to blue when clicked or hovered */
}

.github-icon svg {
    border-radius: 40%;
    padding: 5px;
    transition: transform 0.2s ease-in-out;
    background-color: inherit;
    fill: black;
}

.git-kangjie svg { background-color: #6f42c1; } 
.git-dylan svg { background-color: #0366d6; }   
.git-tsira svg { background-color: #e36209; }   

/* Media Query for small screens (mobile) */
@media (max-width: 768px) {
    nav {
        flex-direction: column;
        align-items: center;
    }

    .internal-links {
        flex-direction: column; /* Stack links vertically */
        gap: 10px;
        align-items: center; /* Center align the links */
    }

    .internal-links a {
        font-size: 24px; /* Smaller font size on small screens */
    }

    .social-links {
        margin-top: 10px; /* Space above the social icons */
    }

    .github-icon svg {
        width: 30px; /* Adjust icon size for smaller screens */
        height: 30px;
    }
}

/* Media Query for extra small screens (portrait phone) */
@media (max-width: 480px) {
    nav {
        padding: 10px; /* Reduce padding on very small screens */
    }

    .internal-links a {
        font-size: 20px; /* Smaller font size for ultra-small screens */
    }

    .github-icon svg {
        width: 25px; /* Smaller icon for tiny screens */
        height: 25px;
    }
}
</style>